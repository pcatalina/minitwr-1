div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-xs-12
      h1 Sign up
  .row
    .col-xs-12

      form.form(name='form', ng-submit='register(form)', novalidate,
      shake-on-submit-error)

        .form-group(ng-class="{'has-error': showNameError()}")
          label.control-label(for='name') Name
          .input-group
            .input-group-addon
              span.fa.fa-user
            input.form-control(type='text', name='name',
            ng-model='user.name', ng-required='true')
          span.help-block(ng-show="showNameError()")
            | Please enter your name or pseudonym

        .form-group(ng-class="{'has-error': showEmailError()}")
          label.control-label(for='email') Email
          .input-group
            .input-group-addon
              span.fa.fa-envelope-o
            input.form-control(type='email', name='email',
            ng-model='user.email', ng-required='true')
          span.help-block(ng-show="showEmailError()")
            | Please enter valid email

        .form-group(ng-class="{'has-error': showPasswordError()}")
          label Password
          .input-group
            .input-group-addon
              span.fa.fa-key
            input.form-control(type='password', name='password',
            ng-model='user.password', ng-required='true' ng-minlength='3')
          span.help-block(ng-show="showPasswordError()")
            | Please enter password

        .form-group
          .row
            .col-xs-9
              alert.alert.alert-danger(ng-show='showErrorAlert')
                p {{ errors.submitError }}
            .col-xs-3
              button.btn.btn-default.btn-lg.pull-right(type='submit') Sign up

  .row
    .col-xs-12
      div.center-block
        p
          | Already have an account?
          =  ' '
          a(href='/login') Login

div(ng-include='"components/auth-providers/auth-providers.html"')
div(ng-include='"components/footer/footer.html"')

