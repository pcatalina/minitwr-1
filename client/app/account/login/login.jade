div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-xs-12
      h1 Login
  .row
    .col-xs-12
      form.form(name='form', ng-submit='login(form)', novalidate
      shake-on-submit-error)
        .form-group(ng-class="{'has-error': showEmailError()}")
          label.control-label(for='email') Email
          .input-group
            .input-group-addon
              span.fa.fa-envelope-o
            input.form-control(type='email', name='email', ng-model='user.email',
            ng-required='true')
          span.help-block(ng-show="showEmailError()")
            | Please enter valid email

        .form-group(ng-class="{'has-error': showPasswordError()}")
          label Password
          .input-group
            .input-group-addon
              span.fa.fa-key
            input.form-control(type='password', name='password',
            ng-model='user.password', ng-required='true')
          span.help-block(ng-show="showPasswordError()")
            | Please enter password

        .form-group
          .row
            .col-xs-9
              alert.alert.alert-danger(ng-show='showErrorAlert')
                p {{ errors.submitError }}
            .col-xs-3
              button.btn.btn-default.btn-lg.pull-right(type='submit') Login
  .row
    .col-xs-12
      div.center-block
        p
          | Don't have an account yet?
          =  ' '
          a(href='/signup') Register

.container
  .row
    .col-md-4
      a.btn.btn-facebook(href='', ng-click='loginOauth("facebook")')
        i.fa.fa-facebook
        |  Connect with Facebook
    .col-md-4
      a.btn.btn-google-plus(href='', ng-click='loginOauth("google")')
        i.fa.fa-google-plus
        |  Connect with Google+
    .col-md-4
      a.btn.btn-twitter(href='', ng-click='loginOauth("twitter")')
        i.fa.fa-twitter
        |  Connect with Twitter

div(ng-include='"components/footer/footer.html"')
